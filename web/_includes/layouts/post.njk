---
layout: layouts/base.njk
templateClass: tmpl-post
---
{%- from "components/source/macro.njk" import src -%}
{%- from "components/tag/macro.njk" import t -%}

<article class="bg-white p-4">
  <h1>{{ post.title }}</h1>

  <ul class="tag-list mb-4">
    {% for tag in post.tags %}
      <li>
        {{ t({ title: tag.title }) }}
      </li>
    {% endfor %}
  </ul>

  {{ post.body | markdownify | safe }}
</article>

<aside>
	<h2 class="mt-5 mb-4 highlight-color-pink-vivid-100">Sources</h2>
	<ul class="sources-grid highlight-color-pink-vivid-100">
		{% for source in post.sources %}
			<li>
				{{ src({ link: source.url, description: source.description, title: source.title, image: source.image, headingLevel: 3 }) }}
